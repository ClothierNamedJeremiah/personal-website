{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": [
    ".vscode/",
    ".next/",
    "archive/",
    "node_modules/",
    "out/",
    "public/"
  ],
  "extends": ["plugin:react/recommended", "airbnb", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["jest", "react"],
  "rules": {},
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}
